@using RemontUnderKey.Web.Models
@model List<PhotoGalery_View>

@section Header {
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Content/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/elastislide.css" />
    <link href='https://fonts.googleapis.com/css?family=PT+Sans+Narrow&v1' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css' />
    <noscript>
        <style>
            .es-carousel ul {
                display: block;
            }
        </style>
    </noscript>
    <script id="img-wrapper-tmpl" type="text/x-jquery-tmpl">
        <div class="rg-image-wrapper">
            {{if itemsCount > 1}}
            <div class="rg-image-nav">
                <a href="#" class="rg-image-nav-prev">Previous Image</a>
                <a href="#" class="rg-image-nav-next">Next Image</a>
            </div>
            {{/if}}
            <div class="rg-image"></div>
            <div class="rg-loading"></div>
            <div class="rg-caption-wrapper">
                <div class="rg-caption" style="display:none;">
                    <p></p>
                </div>
            </div>
        </div>
    </script>
}

@section Body {
    <h1 class="eraser">@ViewBag.Title <span>@ViewBag.Message</span></h1>
    <div id="rg-gallery" class="rg-gallery">
        <div class="rg-thumbs">
            <!-- Elastislide Carousel Thumbnail Viewer -->
            <div class="es-carousel-wrapper">
                <div class="es-nav">
                    <span class="es-nav-prev">Previous</span>
                    <span class="es-nav-next">Next</span>
                </div>
                <div class="es-carousel">
                    <ul>
                        @foreach (PhotoGalery_View item in Model)
                        {
                            <li>
                                <a href="#">
                                    <img src="@item.ImgSrcMini" data-large="@Url.Content(item.ImgSrc)"
                                         alt="@item.TitleOfRepareObject"
                                         title="@item.ImgSrcMini"
                                         data-description="@item.TitleOfRepareObject" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <!-- End Elastislide Carousel Thumbnail Viewer -->
        </div><!-- rg-thumbs -->
    </div><!-- rg-gallery -->
}

@section scripts {
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    @Scripts.Render("~/Scripts/jquery.tmpl.min.js")
    @Scripts.Render("~/Scripts/jquery.easing.1.3.js")
    @Scripts.Render("~/Scripts/jquery.elastislide.js")
    @Scripts.Render("~/Scripts/gallery.js")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/css")
}