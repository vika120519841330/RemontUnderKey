@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@section Body{
    <div style="text-align: center;  margin-top: 5px; margin-bottom: 15px; color: black; font-size: x-large; font-weight: bold;">
        @ViewBag.TODO
    </div>
    <div style="text-align: center;  margin-top: 5px; margin-bottom: 15px; color: red; font-size: medium;">
        @ViewBag.Result0
    </div>
    <div style="text-align: center;  margin-top: 35px; margin-bottom: 5px; color: black; font-size: medium;">
        @ViewBag.Result
    </div>
    <div style="text-align: center; display: block; width: 50%; margin-left: 25%">
        <table align="center" border="1">
            <thead>
                <tr>
                    <th>
                        №П/П
                    </th>
                    <th>
                        РОЛЬ
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (string role in @ViewBag.listofrolesofuser)
                {
                    <tr>
                        <td style="width: 20%;">@(++ViewBag.Num)</td>
                        <td style="width: 80%;">@role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="height: 15px; text-align: center;"></div>
    <div style="text-align: center;">
        <button>
            @Html.RouteLink("ПРОДОЛЖИТЬ УДАЛЕНИЕ РОЛЕЙ У ТЕКУЩЕГО ПОЛЬЗОВАТЕЛЯ", new { Controller = "Role", Action = "DeleteRole", id = TempData["IdOfUser"] as string })
        </button>
    </div>
    <div style="height: 15px; text-align: center;"></div>
    <div style="text-align: center;">
        <button>
            @Html.ActionLink("НАЗАД К СПИСКУ РОЛЕЙ", "AllRoles", "Role")
        </button>
    </div>
}
