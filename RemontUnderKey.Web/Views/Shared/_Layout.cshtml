@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="Ремонт под ключ в Минске и Минском районе, частичный и комплексный ремонт в Минске и Минском районе" />
    <meta name="keywords" content="Ремонт, ремонт, Под  под ключ, Ремонт под ключ, Ремонт в Минске и Минском районе, Ремонт в Минске, Ремонт в Минском районе,
          Ремонт под ключ в Минске и Минском районе, комплексный ремонт, частичный ремонт, комплексный и частичный ремонт" />
    <meta name="author" content="Codrops" />

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    @RenderSection("Header", required: false)

</head>
<body>
    <div class="mybardiv">
        <a class="eraser" style="float: left; padding-left: 2px; font-size: 50px" href="@Url.Action( "Index", "Home")">
            REMONT
        </a>
        <ul class="mybar" style="float: right; padding-right: 10px">
            <li class="mybar">@Html.Partial("_LoginPartial")</li>
        </ul>
        <br />
        <br />
        <ul class="mybar">
            <li class="mybar">@Html.ActionLink("ГЛАВНАЯ", "Index", "Home")</li>
            <li class="mybar">@Html.ActionLink("ЦЕНЫ", "GetAllKinds", "Kind")</li>
            <li class="mybar">@Html.ActionLink("ФОТОГАЛЕРЕЯ", "GetAllPhotos", "Photo")</li>
            <li class="mybar">@Html.ActionLink("ОТЗЫВЫ", "Comments", "Comment")</li>
            <li class="mybar">@Html.ActionLink("ДОКУМЕНТАЦИЯ", "Certificate", "Contact")</li>
            <li class="mybar">@Html.ActionLink("ЗАКАЗАТЬ ЗВОНОК", "CreateCallMee", "CallMee")</li>
            <li class="mybar">@Html.ActionLink("КОНТАКТЫ", "Contacts", "Contact")</li>
        </ul>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    @RenderBody()
    @RenderSection("Body", required: false)
    @RenderSection("Footer", required: false)
    <div style="color: white; font-size: small; padding-left: 20px; padding-right: 20px">
        <hr />
        <footer style="color: #ffffff">
            <p class="beast">
                @Html.ActionLink("ВЕРНУТЬСЯ НА ГЛАВНУЮ", "Index", "Home")
            </p>
            <br />
            <p>
                &copy; @DateTime.Now.Year - @ViewBag.Title
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
