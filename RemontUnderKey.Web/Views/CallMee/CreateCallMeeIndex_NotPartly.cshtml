@using RemontUnderKey.Web.Models
@model CallMee_View


    <body>
        <div style="padding-left: 20px; padding-right: 20px">
            @using (Html.BeginForm("CreateCallMeeIndex", "CallMee", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr class="eraser" />
                <p> &emsp; </p>
                <p style="font-size:xx-large; text-align: center;" class="eraser">@ViewBag.Title</p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div style="padding-left: 20%; color: red;">
                    <p class="eraser" style="font-size: large; color: red; margin: 15px 0px 5px 0px;">
                        @ViewBag.Message
                    </p>
                </div>
                <br />
                <div class="form-horizontal" style="padding-top: 1.5%;">
                    <div class="eraser">
                        <div class="form-group" style="padding-left: 43%; ">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", @style = "padding-left: 6%;" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "eraser", @style = "border-radius: 10px;", @placeholder = "Имя:" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "eraserdanger" })
                            </div>
                        </div>
                        <p> &emsp; </p>
                        <p> &emsp; </p>
                        <div class="form-group" style="padding-left: 43%; ">
                            @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2", @style = "padding-left: 2%;" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Telephone, new { @class = "eraser", @style = "border-radius: 10px;", placeholder = Html.DisplayNameFor(m => m.Telephone) })
                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "eraserdanger" })
                            </div>
                        </div>
                        <p> &emsp; </p>
                        <p> &emsp; </p>
                        <div class="form-group" style="padding-left: 40.5%; ">
                            @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-2", @style = "padding-left: 5%;" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Comments, 5, 200, new { @class = "eraser", @style = "border-radius: 10px;", placeholder = Html.DisplayNameFor(m => m.Comments) })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "eraserdanger" })
                            </div>
                        </div>
                        <p> &emsp; </p>
                        <p> &emsp; </p>
                        <div style="padding-left: 43%; ">
                            <input style="background-color: white; color: black; font-size: large; border-radius: 5px;" type="submit" value="ОТПРАВИТЬ" class="eraser" />
                        </div>
                        <br />
                    </div>
                </div>
            }
        </div>
    </body>
