@using RemontUnderKey.Web.Models
@model IEnumerable<KindOfJob_View>

<body> 
    <div style="padding-left: 5%">
        <table class="mytable">
            <tr>
                <th width="80%" align="left" style="font-style: oblique; font-weight: bold">
                    Виды работ
                </th>
                <th width="10%" align="center" style="font-style: oblique; font-weight: bold">
                    Единица измерения
                </th>
                <th width="10%" align="center" style="font-style: oblique; font-weight: bold">
                    Стоимость, долл. по курсу НБ РБ
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th colspan="3" style="font-style: oblique; font-weight: bold">
                        @Html.DisplayFor(modelItem => item.TitleOfKindOfJob)
                    </th>
                </tr>
                <tr>
                    <td colspan="3">
                        @Html.DisplayFor(modelItem => item.DescriptionOfKindOfJob)
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        @Html.Action("AllJobsByIdOfkind", "Job", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
        </div>
</body>
